@model CoEm.HR.Models.EmpleadorViewModel

@{
    ViewData["Title"] = "Registrar Empleador";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h4>Formulario de Registro</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Registrar" method="post">
                        <div class="form-group">
                            <label asp-for="Email">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" type="email" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Clave">Contraseña</label>
                            <input asp-for="Clave" class="form-control" type="password" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre">Nombre Completo</label>
                            <input asp-for="Nombre" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" type="number" maxlength="10" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Direccion">Dirección</label>
                            <input asp-for="Direccion" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Industria">Industria</label>
                            <input asp-for="Industria" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroEmpleados">Número de Empleados</label>
                            <input asp-for="NumeroEmpleados" class="form-control" type="number" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Ubicacion">Ubicación</label>
                            <input asp-for="Ubicacion" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Registrar Empleador</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
